<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Top section: Title and Mode selector -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/app_name" />

        <!-- App title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="16dp" />

        <!-- Mode selector label -->
        <TextView
            android:id="@+id/modeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_mode"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="12dp" />

        <!-- NeuroSync -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modeNeuroSyncButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/mode_neurosync"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:cornerRadius="16dp" />

            <ImageView
                android:id="@+id/iconNeuroSyncPhone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_phone"
                app:tint="?attr/colorPrimary" />

            <!-- Spacer for alignment with modes that have 2 icons -->
            <View
                android:layout_width="28dp"
                android:layout_height="1dp" />

        </LinearLayout>

        <!-- Sleep Ramp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modeSleepButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/mode_sleep"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:cornerRadius="16dp" />

            <ImageView
                android:id="@+id/iconSleepPhone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_phone"
                app:tint="?attr/colorPrimary" />

            <ImageView
                android:id="@+id/iconSleepHeadphones"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_headphones"
                app:tint="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Migraine Relief -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modeMigraineButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/mode_migraine"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:cornerRadius="16dp" />

            <ImageView
                android:id="@+id/iconMigrainePhone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_phone"
                app:tint="?attr/colorPrimary" />

            <!-- Spacer for alignment -->
            <View
                android:layout_width="28dp"
                android:layout_height="1dp" />

        </LinearLayout>

        <!-- Mood Lift -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modeMoodLiftButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/mode_mood_lift"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:cornerRadius="16dp" />

            <ImageView
                android:id="@+id/iconMoodLiftHeadphones"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_headphones" />

            <ImageView
                android:id="@+id/iconMoodLiftGlasses"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_glasses" />

        </LinearLayout>

        <!-- Memory Write -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modeMemoryButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/mode_memory"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:cornerRadius="16dp" />

            <ImageView
                android:id="@+id/iconMemoryPhone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_phone"
                app:tint="?attr/colorPrimary" />

            <ImageView
                android:id="@+id/iconMemoryGlasses"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_glasses"
                app:tint="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Mode description -->
        <TextView
            android:id="@+id/modeDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mode_neurosync_description"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface"
            android:lineSpacingMultiplier="1.3"
            android:gravity="start"
            android:minHeight="48dp" />

        <!-- XREAL warning (hidden by default) -->
        <TextView
            android:id="@+id/xrealWarningText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/xreal_required_warning"
            android:textSize="12sp"
            android:textColor="@color/status_required"
            android:gravity="start"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Bottom section: Duration and controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:paddingBottom="32dp">

        <!-- Duration selector -->
        <TextView
            android:id="@+id/durationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_duration"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/duration15Button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/duration_15"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp"
                app:cornerRadius="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/duration30Button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/duration_30"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp"
                app:cornerRadius="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/duration60Button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/duration_60"
                android:textSize="15sp"
                android:textAllCaps="false"
                app:cornerRadius="16dp" />

        </LinearLayout>

        <!-- Start button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/startSessionButton"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/start_session"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:cornerRadius="16dp" />

        <!-- Settings link -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/settings"
            android:textSize="14sp"
            android:textAllCaps="false" />

    </LinearLayout>

</FrameLayout>
