<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- App title at top -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="48dp"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- All controls at bottom for one-handed use -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:paddingBottom="32dp">

        <!-- Max brightness toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/surface_background"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/max_brightness"
                android:textSize="16sp"
                android:textColor="#E0E0E0" />

            <Switch
                android:id="@+id/maxBrightnessSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#26A69A"
                android:trackTint="#424242" />

        </LinearLayout>

        <!-- Duration selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_duration"
            android:textSize="14sp"
            android:textColor="#9E9E9E"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/duration15Button"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="@string/duration_15"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="#9E9E9E"
                android:layout_marginEnd="8dp"
                android:background="@drawable/chip_background" />

            <Button
                android:id="@+id/duration30Button"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="@string/duration_30"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"
                android:background="@drawable/chip_background_selected" />

            <Button
                android:id="@+id/duration60Button"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="@string/duration_60"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="#9E9E9E"
                android:background="@drawable/chip_background" />

        </LinearLayout>

        <!-- Start button -->
        <Button
            android:id="@+id/startSessionButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/start_session"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/primary_button_background" />

        <!-- Settings link -->
        <Button
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/settings"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="#9E9E9E"
            android:background="?attr/selectableItemBackground" />

    </LinearLayout>

</FrameLayout>
