<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- Top section: Title and Mode selector -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Mode selector label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_mode"
            android:textSize="14sp"
            android:textColor="#9E9E9E"
            android:layout_marginBottom="12dp" />

        <!-- Memory (was NeuroSync) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/modeNeuroSyncButton"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="@string/mode_neurosync"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:background="@drawable/chip_background_selected" />

            <ImageView
                android:id="@+id/iconNeuroSyncPhone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_phone"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Sleep Ramp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/modeSleepButton"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="@string/mode_sleep"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="#9E9E9E"
                android:background="@drawable/chip_background" />

            <ImageView
                android:id="@+id/iconSleepPhone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_phone"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iconSleepHeadphones"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_headphones"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Migraine Relief -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/modeMigraineButton"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="@string/mode_migraine"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="#9E9E9E"
                android:background="@drawable/chip_background" />

            <ImageView
                android:id="@+id/iconMigrainePhone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_phone"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Mood Lift -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/modeMoodLiftButton"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="@string/mode_mood_lift"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="#9E9E9E"
                android:background="@drawable/chip_background" />

            <ImageView
                android:id="@+id/iconMoodLiftHeadphones"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_headphones"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iconMoodLiftGlasses"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_glasses"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Learning (was Memory Write) - will have RSVP file picker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/modeMemoryButton"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="@string/mode_memory"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="#9E9E9E"
                android:background="@drawable/chip_background" />

            <ImageView
                android:id="@+id/iconMemoryPhone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_phone"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iconMemoryGlasses"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_glasses"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Mode description -->
        <TextView
            android:id="@+id/modeDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mode_neurosync_description"
            android:textSize="12sp"
            android:textColor="#757575"
            android:gravity="start"
            android:minHeight="32dp" />

        <!-- XREAL warning (hidden by default) -->
        <TextView
            android:id="@+id/xrealWarningText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/xreal_required_warning"
            android:textSize="12sp"
            android:textColor="#FF5252"
            android:gravity="start"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Bottom section: Duration and controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:paddingBottom="32dp">

        <!-- Duration selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_duration"
            android:textSize="14sp"
            android:textColor="#9E9E9E"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/duration15Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/duration_15"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="#9E9E9E"
                android:layout_marginEnd="8dp"
                android:background="@drawable/chip_background" />

            <Button
                android:id="@+id/duration30Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/duration_30"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"
                android:background="@drawable/chip_background_selected" />

            <Button
                android:id="@+id/duration60Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/duration_60"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="#9E9E9E"
                android:background="@drawable/chip_background" />

        </LinearLayout>

        <!-- Start button -->
        <Button
            android:id="@+id/startSessionButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/start_session"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/primary_button_background" />

        <!-- Settings link -->
        <Button
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/settings"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="#9E9E9E"
            android:background="?attr/selectableItemBackground" />

    </LinearLayout>

</FrameLayout>
