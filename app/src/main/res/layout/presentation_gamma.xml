<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Full-screen gamma flicker for external display -->
    <com.gammasync.infra.GammaRenderer
        android:id="@+id/externalGammaRenderer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Timer overlay - shown when user taps to check time -->
    <com.gammasync.ui.CircularTimerView
        android:id="@+id/externalTimer"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
