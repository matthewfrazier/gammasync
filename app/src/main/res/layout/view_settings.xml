<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

<LinearLayout
    android:id="@+id/settingsRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Back button and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="24sp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Default Duration -->
    <TextView
        android:id="@+id/durationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_duration"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsDuration15"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="80dp"
            android:text="@string/duration_15"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsDuration30"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="80dp"
            android:text="@string/duration_30"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsDuration60"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="80dp"
            android:text="@string/duration_60"
            android:textSize="14sp"
            app:cornerRadius="16dp" />

    </LinearLayout>

    <!-- Color Theme -->
    <TextView
        android:id="@+id/colorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color_theme"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp">

        <View
            android:id="@+id/colorTeal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:background="@color/accent_teal" />

        <View
            android:id="@+id/colorBlue"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:background="@color/accent_blue" />

        <View
            android:id="@+id/colorPurple"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:background="@color/accent_purple" />

        <View
            android:id="@+id/colorGreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:background="@color/accent_green" />

        <View
            android:id="@+id/colorOrange"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:background="@color/accent_orange" />

        <View
            android:id="@+id/colorRed"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/accent_red" />

    </LinearLayout>

    <!-- Theme Mode (Dark/Light) -->
    <TextView
        android:id="@+id/themeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/theme_mode"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/darkModeButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="100dp"
            android:text="@string/dark"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lightModeButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="100dp"
            android:text="@string/light"
            android:textSize="14sp"
            app:cornerRadius="16dp" />

    </LinearLayout>

    <!-- Background Noise -->
    <TextView
        android:id="@+id/noiseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/background_noise"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/noiseOnButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="100dp"
            android:text="@string/noise_on"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/noiseOffButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="100dp"
            android:text="@string/noise_off"
            android:textSize="14sp"
            app:cornerRadius="16dp" />

    </LinearLayout>

    <!-- RSVP Display Settings -->
    <TextView
        android:id="@+id/rsvpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rsvp_display"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="12dp" />

    <!-- Text Size -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_size"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <SeekBar
            android:id="@+id/rsvpSeekTextSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:min="5"
            android:max="25"
            android:progress="15"
            android:progressTint="?attr/colorPrimary"
            android:thumbTint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/rsvpTxtTextSizeValue"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="15%"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:gravity="end"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- ORP Highlight Toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/focus_letter_highlight"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/rsvpSwitchOrpHighlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

    </LinearLayout>

    <!-- Hyphenation Toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/break_long_words"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/rsvpSwitchHyphenation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

    </LinearLayout>

</LinearLayout>

</ScrollView>
