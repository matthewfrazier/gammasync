<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Visual flicker (only used when no external display) -->
    <com.gammasync.infra.GammaRenderer
        android:id="@+id/gammaRenderer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Dark overlay for power saving (fades in when controls hidden) -->
    <View
        android:id="@+id/powerSaveOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0"
        android:visibility="gone" />

    <!-- Single-line controls at bottom -->
    <LinearLayout
        android:id="@+id/controlsOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#88000000"
        android:padding="20dp"
        android:paddingBottom="40dp">

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:minHeight="72dp"
            android:text="@string/start"
            android:textSize="20sp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_initial"
            android:textSize="36sp"
            android:fontFamily="monospace"
            android:textColor="#FFFFFF"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:minHeight="72dp"
            android:text="@string/stop"
            android:textSize="20sp"
            android:enabled="false"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:minHeight="72dp"
            android:text="@string/reset"
            android:textSize="20sp" />

    </LinearLayout>

</FrameLayout>
