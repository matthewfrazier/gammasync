<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- ViewFlipper for screen navigation -->
    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Screen 0: Safety Disclaimer -->
        <com.gammasync.ui.SafetyDisclaimerView
            android:id="@+id/disclaimerScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Screen 1: Home -->
        <com.gammasync.ui.HomeView
            android:id="@+id/homeScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Screen 2: Therapy -->
        <FrameLayout
            android:id="@+id/therapyScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:clickable="true"
            android:focusable="true">

            <!-- Subtle dark flicker overlay (phone display only, shown with controls) -->
            <com.gammasync.ui.SubtleFlickerOverlay
                android:id="@+id/subtleFlickerOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Controls container - tap to show/hide -->
            <FrameLayout
                android:id="@+id/therapyControlsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <!-- Large central timer -->
                <com.gammasync.ui.CircularTimerView
                    android:id="@+id/circularTimer"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center" />

                <!-- Stop button at bottom -->
                <Button
                    android:id="@+id/stopButton"
                    android:layout_width="180dp"
                    android:layout_height="64dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="48dp"
                    android:text="@string/stop"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:background="@drawable/hold_button_background"
                    android:textColor="#FFFFFF" />

            </FrameLayout>

        </FrameLayout>

        <!-- Screen 3: Session Complete -->
        <com.gammasync.ui.SessionCompleteView
            android:id="@+id/completeScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Screen 4: Settings -->
        <com.gammasync.ui.SettingsView
            android:id="@+id/settingsScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ViewFlipper>

</FrameLayout>
