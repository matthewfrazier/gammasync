<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- ViewFlipper for screen navigation -->
    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Screen 0: Safety Disclaimer -->
        <com.cognihertz.ui.SafetyDisclaimerView
            android:id="@+id/disclaimerScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Screen 1: Home -->
        <com.cognihertz.ui.HomeView
            android:id="@+id/homeScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Screen 2: Therapy -->
        <FrameLayout
            android:id="@+id/therapyScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:clickable="true"
            android:focusable="true">

            <!-- Full therapy visual renderer (phone display, used when no XREAL connected) -->
            <com.cognihertz.infra.UniversalVisualRenderer
                android:id="@+id/phoneVisualRenderer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Controls container - tap to show/hide -->
            <FrameLayout
                android:id="@+id/therapyControlsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <!-- Large central timer -->
                <com.cognihertz.ui.CircularTimerView
                    android:id="@+id/circularTimer"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center" />

                <!-- Pause button at bottom (shown during active session) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pauseButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="180dp"
                    android:layout_height="64dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="48dp"
                    android:text="@string/pause"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    app:cornerRadius="16dp" />

            </FrameLayout>

            <!-- Pause overlay - shown when paused -->
            <LinearLayout
                android:id="@+id/pauseOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#CC000000"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pause"
                    android:textSize="32sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/pauseDurationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 min session"
                    android:textSize="18sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginBottom="48dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/resumeButton"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="200dp"
                    android:layout_height="64dp"
                    android:text="@string/resume"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    app:cornerRadius="16dp"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doneButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="200dp"
                    android:layout_height="64dp"
                    android:text="@string/done"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    app:cornerRadius="16dp" />

            </LinearLayout>

        </FrameLayout>

        <!-- Screen 3: Session Complete -->
        <com.cognihertz.ui.SessionCompleteView
            android:id="@+id/completeScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Screen 4: Settings -->
        <com.cognihertz.ui.SettingsView
            android:id="@+id/settingsScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ViewFlipper>

</FrameLayout>
