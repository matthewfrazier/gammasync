<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- ViewFlipper for screen navigation -->
    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Screen 0: Safety Disclaimer -->
        <com.gammasync.ui.SafetyDisclaimerView
            android:id="@+id/disclaimerScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Screen 1: Home -->
        <com.gammasync.ui.HomeView
            android:id="@+id/homeScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Screen 2: Experience Session -->
        <FrameLayout
            android:id="@+id/therapyScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:clickable="true"
            android:focusable="true">

            <!-- Full experience visual renderer (phone display, used when no XREAL connected) -->
            <com.gammasync.infra.UniversalVisualRenderer
                android:id="@+id/phoneVisualRenderer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- RSVP text overlay (Learning mode only) -->
            <com.gammasync.ui.RsvpOverlay
                android:id="@+id/rsvpOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Controls container - tap to show/hide -->
            <FrameLayout
                android:id="@+id/therapyControlsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <!-- RSVP WPM display (top, visible during Learning mode) -->
                <LinearLayout
                    android:id="@+id/rsvpWpmContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:background="@drawable/rounded_background"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/therapyRsvpSpeedDown"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:minWidth="0dp"
                        android:padding="0dp"
                        app:cornerRadius="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="16dp">

                        <TextView
                            android:id="@+id/therapyWpmDisplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="360 WPM"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/therapyThetaDisplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1Ã— theta"
                            android:textSize="12sp"
                            android:textColor="#AAAAAA" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/therapyRsvpSpeedUp"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:minWidth="0dp"
                        android:padding="0dp"
                        app:cornerRadius="20dp" />

                </LinearLayout>

                <!-- Large central timer -->
                <com.gammasync.ui.CircularTimerView
                    android:id="@+id/circularTimer"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center" />

                <!-- Bottom controls container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="48dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Noise toggle button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/noiseToggleButton"
                        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Toggle background noise"
                        app:icon="@drawable/ic_noise_on"
                        app:iconSize="24dp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:cornerRadius="16dp" />

                    <!-- Pause button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pauseButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="180dp"
                        android:layout_height="64dp"
                        android:text="@string/pause"
                        android:textSize="18sp"
                        android:textAllCaps="false"
                        app:cornerRadius="16dp" />

                </LinearLayout>

            </FrameLayout>

            <!-- Pause overlay - shown when paused -->
            <LinearLayout
                android:id="@+id/pauseOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#CC000000"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pause"
                    android:textSize="32sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/pauseDurationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 min session"
                    android:textSize="18sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginBottom="48dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/resumeButton"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="200dp"
                    android:layout_height="64dp"
                    android:text="@string/resume"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    app:cornerRadius="16dp"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doneButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="200dp"
                    android:layout_height="64dp"
                    android:text="@string/done"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    app:cornerRadius="16dp" />

            </LinearLayout>

        </FrameLayout>

        <!-- Screen 3: Session Complete -->
        <com.gammasync.ui.SessionCompleteView
            android:id="@+id/completeScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Screen 4: RSVP Details -->
        <com.gammasync.ui.RsvpDetailsView
            android:id="@+id/rsvpDetailsScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ViewFlipper>

</FrameLayout>
