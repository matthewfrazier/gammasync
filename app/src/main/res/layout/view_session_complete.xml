<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#121212"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/session_complete"
        android:textSize="32sp"
        android:textColor="#26A69A"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/durationSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/session_duration_format"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/startAnotherButton"
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:text="@string/start_another"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:background="@drawable/primary_button_background"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:text="@string/exit"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/hold_button_background" />

</LinearLayout>
