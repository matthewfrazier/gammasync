<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Logo centered in adaptive icon safe zone -->
    <!-- Original logo spans ~80-432 horizontally (352 units), ~156-356 vertically (200 units) -->
    <!-- Scale to fit in 66dp safe zone: 66/352 = 0.1875 -->
    <!-- Center offset: x = 21 - (80 * 0.1875) = 6, y = 21 + adjustment for vertical centering -->
    <group
        android:translateX="6"
        android:translateY="15"
        android:scaleX="0.1875"
        android:scaleY="0.1875"
        android:pivotX="0"
        android:pivotY="0">

        <!-- Left circle -->
        <path
            android:pathData="M180,156 a100,100 0 1,0 0,200 a100,100 0 1,0 0,-200"
            android:strokeWidth="14"
            android:strokeColor="#26A69A"
            android:fillColor="@android:color/transparent" />

        <!-- Right circle -->
        <path
            android:pathData="M332,156 a100,100 0 1,0 0,200 a100,100 0 1,0 0,-200"
            android:strokeWidth="14"
            android:strokeColor="#26A69A"
            android:fillColor="@android:color/transparent" />

        <!-- Overlap region -->
        <path
            android:pathData="M256,176.5 A94,94 0 0,1 256,335.5 A94,94 0 0,1 256,176.5"
            android:fillColor="#26A69A"
            android:fillAlpha="0.3" />

        <!-- Wave phase 1 -->
        <path
            android:pathData="M80,256 C130,200 180,200 256,256 C332,312 382,312 432,256"
            android:strokeWidth="10"
            android:strokeColor="#4DB6AC"
            android:strokeLineCap="round"
            android:fillColor="@android:color/transparent" />

        <!-- Wave phase 2 -->
        <path
            android:pathData="M80,256 C130,312 180,312 256,256 C332,200 382,200 432,256"
            android:strokeWidth="8"
            android:strokeColor="#80CBC4"
            android:strokeLineCap="round"
            android:strokeAlpha="0.6"
            android:fillColor="@android:color/transparent" />

        <!-- Center point -->
        <path
            android:pathData="M256,240 a16,16 0 1,0 0,32 a16,16 0 1,0 0,-32"
            android:fillColor="#E0F2F1" />

    </group>

</vector>
